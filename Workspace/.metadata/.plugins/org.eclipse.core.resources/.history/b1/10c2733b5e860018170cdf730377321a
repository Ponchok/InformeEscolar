package com.abarraotes.dao;

import java.sql.*;
import com.abarrotes.utilidades.ConexionBD;
import com.abarrotes.utilidades.Constantes;

public class AccesoAdministrativo {

	/**
	 * Metodo Data Acces Object para obtener datos de la tabla "Acceso" y autenticar el
	 * acceso a usuarios administradores.
	 * @param usuario
	 * @param contrase単a
	 * @return boolean | Es usuario Administrador?
	 */
	public boolean esUsuarioAdmin(String usuario, String contrase単a) {
		boolean esAdmin = false;
		try {
			Connection conn = ConexionBD.conectarBD();
			Statement stm = conn.createStatement();
			String query = Constantes.DAO_TABLA_ACCESO;
			ResultSet rs = stm.executeQuery(query);

			while (rs.next()) {
				if (usuario.equals(rs.getString("empleado")) && contrase単a.equals(rs.getString("contrase単a"))) {
					esAdmin = true;
					System.out.println("Usuario es Administrador identificado...");
					break;
				}
			}
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

		return esAdmin;
	}

}
